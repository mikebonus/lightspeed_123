<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lightspeed.lightspeedproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.lightspeed.lightspeedproject.LightspeedApplication"
        android:allowBackup="true"
        android:icon="@drawable/lightspeedlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lightspeedlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleCachingExample">
        <activity android:name="com.lightspeed.lightspeedproject.ui.FirstActivity"></activity>
        <activity android:name="com.lightspeed.lightspeedproject.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lightspeed.lightspeedproject.ui.SecondActivity"></activity>
        <activity android:name=".ui.DetailActivity"></activity>
    </application>

</manifest>